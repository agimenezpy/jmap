        <MinScaleDenominator>10000000</MinScaleDenominator>
        <PolygonSymbolizer>
            <CssParameter name="fill">#F2EFE9</CssParameter>
        </PolygonSymbolizer>
        <LineSymbolizer>
            <CssParameter name="stroke">#B3A895</CssParameter>
            <CssParameter name="stroke-width">1</CssParameter>
